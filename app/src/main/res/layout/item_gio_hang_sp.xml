<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="@dimen/_96sdp"
    android:padding="@dimen/_4sdp"
    android:background="@drawable/bg_line"
    android:layout_marginBottom="@dimen/_4sdp">



    <ImageView
        android:padding="@dimen/_2sdp"
        android:id="@+id/img_sanpham"
        android:layout_width="@dimen/_96sdp"
        android:layout_height="@dimen/_96sdp"
        android:src="@mipmap/ic_launcher_round"/>
    <TextView
        android:id="@+id/txt_tensp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Cây vạn lộc thủy sinh"
        android:layout_toRightOf="@+id/img_sanpham"
        android:layout_marginLeft="@dimen/_16sdp"
        android:layout_marginTop="@dimen/_4sdp"
        android:textColor="@color/black"
        android:textSize="@dimen/_12sdp"/>

    <TextView
        android:id="@+id/txt_giasp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="179"
        android:layout_marginBottom="@dimen/_4sdp"
        android:layout_toRightOf="@+id/img_sanpham"
        android:layout_above="@+id/ln_btn"
        android:layout_marginLeft="@dimen/_16sdp"
        android:textColor="@color/black"
        android:textSize="@dimen/_12sdp"/>
    <TextView

        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text=".000 VNĐ"
        android:layout_marginBottom="@dimen/_4sdp"
        android:layout_toRightOf="@+id/txt_giasp"
        android:layout_above="@+id/ln_btn"
        android:textColor="@color/black"
        android:textSize="@dimen/_12sdp"/>
    <!--    <-->
    <!--        android:layout_width="match_parent"-->
    <!--        android:layout_height="@dimen/_2sdp"-->
    <!--        android:layout_below="@+id/txt_giasp"-->
    <!--        android:background="@color/black"-->
    <!--        android:layout_marginTop="@dimen/_16sdp"-->

    <LinearLayout
        android:id="@+id/ln_btn"
        android:layout_alignParentBottom="true"
        android:layout_alignParentRight="true"
        android:layout_width="@dimen/_120sdp"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:weightSum="4"
        android:layout_marginRight="@dimen/_12sdp"
        android:layout_marginBottom="@dimen/_4sdp">

        <TextView
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:textSize="@dimen/_20sdp"
            android:layout_gravity="center_vertical"
            android:gravity="center_vertical|center_horizontal"
            android:layout_weight="1"
            android:visibility="invisible"
            android:textColor="@color/white"
            android:id="@+id/btn_giam"
            android:background="@drawable/bg_thanh_toan"
            android:text="-"/>

        <TextView
            android:id="@+id/tv_hien_thi"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/_16sdp"
            android:layout_marginRight="@dimen/_16sdp"
            android:layout_weight="2"
            android:layout_gravity="center_vertical"
            android:gravity="center_vertical|center_horizontal"
            android:text="1" />

        <TextView
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:textSize="@dimen/_20sdp"
            android:layout_weight="1"
            android:textColor="@color/white"
            android:layout_gravity="center_vertical"
            android:gravity="center_vertical|center_horizontal"
            android:background="@drawable/bg_thanh_toan"
            android:id="@+id/btn_them"
            android:text="+"/>


    </LinearLayout>
</RelativeLayout>