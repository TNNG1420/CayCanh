<?xml version="1.0" encoding="utf-8"?>

<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools">

<ScrollView
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="#DDA3F8A3">
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="@dimen/_8sdp">

        <TextView
            android:id="@+id/lienhe"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Liên hệ"
            android:textSize="@dimen/_16sdp"
            android:textColor="@color/black"
            android:textStyle="bold"
            android:layout_centerHorizontal="true"/>


            <LinearLayout
                android:id="@+id/h_lienhe"
                android:layout_marginTop="@dimen/_16sdp"
                android:layout_below="@+id/lienhe"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="vertical">


            <LinearLayout
                android:padding="@dimen/_12sdp"
                android:background="@drawable/bg_line"
                android:id="@+id/dc_sdt"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical">
                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="@string/diachi_sdt"
                    android:textColor="@color/black"
                    android:textSize="@dimen/_12sdp"/>
                <RelativeLayout
                    android:background="@drawable/bg_thanh_toan"
                    android:padding="@dimen/_8sdp"
                    android:id="@+id/call_hanoi"
                    android:layout_marginTop="@dimen/_12sdp"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">
                    <TextView
                        android:id="@+id/hanoi"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Hà Nội"
                        android:textColor="@color/white"
                        android:textSize="@dimen/_12sdp"/>

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="09888.33.653"
                        android:layout_marginRight="@dimen/_12sdp"
                        android:layout_alignParentRight="true"
                        android:textColor="@color/white"
                        android:textSize="@dimen/_12sdp"/>
                    <TextView
                        android:layout_marginTop="@dimen/_4sdp"
                        android:layout_below="@id/hanoi"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="@string/dc_hanoi"
                        android:textColor="@color/white"
                        android:textSize="@dimen/_10sdp"/>
                </RelativeLayout>

                <RelativeLayout
                    android:background="@drawable/bg_thanh_toan"
                    android:padding="@dimen/_8sdp"
                    android:id="@+id/call_hcm"
                    android:layout_marginTop="@dimen/_12sdp"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">
                    <TextView
                        android:id="@+id/hochiminh"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Hồ Chí Minh"
                        android:textColor="@color/white"
                        android:textSize="@dimen/_12sdp"/>

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="0909.28.5658"
                        android:layout_marginRight="@dimen/_12sdp"
                        android:layout_alignParentRight="true"
                        android:textColor="@color/white"
                        android:textSize="@dimen/_12sdp"/>
                    <TextView
                        android:layout_marginTop="@dimen/_4sdp"
                        android:layout_below="@id/hochiminh"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="@string/dc_hcm"
                        android:textColor="@color/white"
                        android:textSize="@dimen/_10sdp"/>
                </RelativeLayout>
            </LinearLayout>


                <LinearLayout
                    android:background="@drawable/bg_line"
                    android:padding="@dimen/_8sdp"
                    android:layout_marginTop="@dimen/_12sdp"
                    android:id="@+id/dai_dien"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical">

                    <LinearLayout

                        android:background="@drawable/bg_thanh_toan"
                        android:padding="@dimen/_8sdp"
                        android:textColor="@color/white"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal">
                        <TextView
                            android:layout_width="@dimen/_120sdp"
                            android:layout_height="wrap_content"
                            android:text="Người đại diện: "
                            android:textColor="@color/white"
                            android:textSize="@dimen/_12sdp"/>
                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Nguyễn Minh Huy "
                            android:textColor="@color/white"
                            android:textSize="@dimen/_12sdp"/>
                    </LinearLayout>

                    <LinearLayout
                        android:background="@drawable/bg_thanh_toan"
                        android:padding="@dimen/_8sdp"
                        android:textColor="@color/white"
                        android:layout_marginTop="@dimen/_8sdp"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal">
                        <TextView
                            android:layout_width="@dimen/_120sdp"
                            android:layout_height="wrap_content"
                            android:text="Mã Số Thuế: "
                            android:textColor="@color/white"
                            android:textSize="@dimen/_12sdp"/>
                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="0801244382"
                            android:textColor="@color/white"
                            android:textSize="@dimen/_12sdp"/>
                    </LinearLayout>
                    <LinearLayout
                        android:background="@drawable/bg_thanh_toan"
                        android:padding="@dimen/_8sdp"
                        android:textColor="@color/white"
                        android:layout_marginTop="@dimen/_8sdp"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal">
                        <TextView
                            android:layout_width="@dimen/_120sdp"
                            android:layout_height="wrap_content"
                            android:text="Số tài khoản:  "
                            android:textColor="@color/white"
                            android:textSize="@dimen/_12sdp"/>
                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="0341007114108"
                            android:textColor="@color/white"
                            android:textSize="@dimen/_12sdp"/>
                    </LinearLayout>

                    <LinearLayout
                        android:background="@drawable/bg_thanh_toan"
                        android:padding="@dimen/_8sdp"
                        android:textColor="@color/white"
                        android:layout_marginTop="@dimen/_8sdp"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal">
                        <TextView
                            android:layout_width="@dimen/_120sdp"
                            android:layout_height="wrap_content"
                            android:text="Ngân hàng:  "
                            android:textColor="@color/white"
                            android:textSize="@dimen/_12sdp"/>
                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Vietcombank"
                            android:textColor="@color/white"
                            android:textSize="@dimen/_12sdp"/>
                    </LinearLayout>

                </LinearLayout>

<!--                Thoi gian ban hang-->
                <LinearLayout
                    android:background="@drawable/bg_thanh_toan"
                    android:padding="@dimen/_16sdp"
                    android:textColor="@color/white"
                    android:layout_marginTop="@dimen/_12sdp"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal">
                    <TextView
                        android:layout_width="@dimen/_120sdp"
                        android:layout_height="wrap_content"
                        android:text="Thời gian làm việc:  "
                        android:textColor="@color/white"
                        android:textSize="@dimen/_12sdp"/>
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="8h sáng đến 20h các ngày"
                        android:textColor="@color/white"
                        android:textSize="@dimen/_12sdp"/>
                </LinearLayout>
                <LinearLayout
                    android:id="@+id/website"
                    android:background="@drawable/bg_thanh_toan"
                    android:padding="@dimen/_16sdp"
                    android:textColor="@color/white"
                    android:layout_marginTop="@dimen/_12sdp"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal">
                    <TextView
                        android:layout_width="@dimen/_120sdp"
                        android:layout_height="wrap_content"
                        android:text="Website:  "
                        android:textColor="@color/white"
                        android:textSize="@dimen/_12sdp"/>
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="https://webcaycanh.com"
                        android:textColor="@color/white"
                        android:textSize="@dimen/_12sdp"/>
                </LinearLayout>

            </LinearLayout>


        <!--                hi-->
        <TextView
            android:layout_below="@+id/h_lienhe"
            android:background="@drawable/bg_thanh_toan"
            android:padding="@dimen/_8sdp"
            android:layout_marginBottom="@dimen/_8sdp"
            android:textColor="@color/white"
            android:layout_marginTop="@dimen/_24sdp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/lienhe_hi"
            android:textStyle="italic"
            android:textSize="@dimen/_12sdp"/>


    </RelativeLayout>
</ScrollView>
</layout>