<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="@dimen/_96sdp"
    android:padding="@dimen/_4sdp"
    android:background="@drawable/bg_line"
    android:layout_marginBottom="@dimen/_4sdp">

    <ImageView
        android:padding="@dimen/_2sdp"
        android:id="@+id/img_sanpham"
        android:layout_width="@dimen/_96sdp"
        android:layout_height="@dimen/_96sdp"
        android:src="@mipmap/ic_launcher_round"/>
    <TextView
        android:id="@+id/txt_tensp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Cây vạn lộc thủy sinh"
        android:layout_toRightOf="@+id/img_sanpham"
        android:layout_margin="@dimen/_16sdp"
        android:textColor="@color/black"
        android:textSize="@dimen/_12sdp"/>

    <TextView
        android:id="@+id/txt_giasp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="179"
        android:layout_toRightOf="@+id/img_sanpham"
        android:layout_alignParentBottom="true"
        android:layout_marginBottom="@dimen/_16sdp"
        android:layout_marginLeft="@dimen/_16sdp"
        android:textColor="@color/black"
        android:textSize="@dimen/_12sdp"/>
    <TextView

        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text=".000 VNĐ"
        android:layout_toRightOf="@+id/txt_giasp"
        android:layout_alignParentBottom="true"
        android:layout_marginBottom="@dimen/_16sdp"
        android:textColor="@color/black"
        android:textSize="@dimen/_12sdp"/>
